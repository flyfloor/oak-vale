var $action_btn = $("#<%= @post.id %>")
$action_btn.siblings(".like_count").html('<%= @post.like_count %>')
if ($action_btn.hasClass("liked")) {
	$action_btn.removeClass("liked").html("<%= escape_javascript(render('posts/like')) %>")
}else{
	$action_btn.addClass("liked").html("<%= escape_javascript(render('posts/unlike')) %>")
}