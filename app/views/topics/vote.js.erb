var $action_btn = $("#topic-<%= @topic.id %>")
$action_btn.siblings(".like_count").html('<%= @topic.like_count %>')
if ($action_btn.hasClass("liked")) {
	$action_btn.removeClass("liked").html("<%= escape_javascript(render('shared/like')) %>")
}else{
	$action_btn.addClass("liked").html("<%= escape_javascript(render('shared/unlike')) %>")
}
