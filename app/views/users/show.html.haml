.user-page
	%section.user-info
		=gravatar_image_tag(@user.email, alt:"#{@user.email}")
		%h2=@user.name
	=render 'shared/stats'
	%section.relation
		=render 'follow_form' if signed_in?
	%section.user-posts
		%section.create-post
		-if current_user? @user
			=link_to 'create a post', new_post_path, class: 'btn btn-primary'
		-@user.recent_posts.each do |post|
			=post.title
			=post.content
			=image_tag(post.photo)
			-if current_user? @user
				=link_to 'delete', post, method: :delete, remote: true, class: 'delete-post'