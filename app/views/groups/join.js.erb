var $action_btn = $("#join-btn-<%= @group.id %>")
$action_btn.parent().find(".members_count").html('<%= @group.members_count %> 个成员')
if ($action_btn.hasClass("joined")) {
	$action_btn.removeClass("joined").html("<%= escape_javascript(render('groups/join')) %>")
}else{
	console.log($action_btn);
	$action_btn.addClass("joined").html("<%= escape_javascript(render('groups/leave')) %>")
}