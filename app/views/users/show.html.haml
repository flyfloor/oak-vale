-provide(:title, @user.name)
.user-page
	.user.module
		=render partial: 'users/user_cell', locals: {model: @user}
		=render 'shared/stats'
		=render 'follow_form' if signed_in?
		%section.action.field
			=link_to "编辑", edit_user_path(@user) if current_user? @user
		-if current_user? @user
			%section.create-post
				=link_to '创建图说', new_post_path, class: 'btn submit-btn'
	%section.user-posts
		-if @recent_posts.present?
			%ul
				%li
					-@recent_posts.each do |item|
						=render partial: "posts/post_cell", locals: {model: item}
			=link_to '更多', user_posts_path(@user), class: 'link_to_more'
		-else
			%article
		%h3 我喜欢的
		-if @last_likes.present?
			=render partial: 'users/likes_feed', locals: {model: @last_likes}
			=link_to '更多', "#{user_path}/favorites"